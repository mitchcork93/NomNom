<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gcm.android.hmkcode.com.food"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="gcm.android.hmkcode.com.food.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gcm.android.hmkcode.com.food.Instructions"
            android:label="@string/title_activity_instructions"
            android:parentActivityName="gcm.android.hmkcode.com.food.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gcm.android.hmkcode.com.food.MainActivity" />
        </activity>
        <activity
            android:name="gcm.android.hmkcode.com.food.Question"
            android:label="@string/title_activity_question"
            android:parentActivityName="gcm.android.hmkcode.com.food.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gcm.android.hmkcode.com.food.MainActivity" />
        </activity>
        <activity
            android:name="gcm.android.hmkcode.com.food.Chicken"
            android:label="@string/title_activity_chicken"
            android:parentActivityName="gcm.android.hmkcode.com.food.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="gcm.android.hmkcode.com.food.SelectedRecipe"
            android:label="@string/title_activity_selected_recipe"
            android:parentActivityName="gcm.android.hmkcode.com.food.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>